@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Mitarbeitenden hinzufügen</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@Employee" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="firstName">Vorname: </label>
                            <InputText id="firstName" class="form-control" @bind-Value="@Employee.FirstName"></InputText>
                            <ValidationMessage For="@(() => Employee.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="lastName">Nachname: </label>
                            <InputText id="lastName" class="form-control" @bind-Value="@Employee.LastName"></InputText>
                            <ValidationMessage For="@(() => Employee.LastName)" />
                        </div>

                        <div class="form-group">
                            <InputCheckbox id="isActive" @bind-Value="@Employee.IsActive"></InputCheckbox>
                            <label for="isActive">Aktiv</label>
                        </div>

                        <button type="submit" class="btn btn-primary">Mitarbeiterenden speichern</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}